 <resources>

        <!-- Tema do aplicativo base. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimary">@color/primary_color</item>
            <item name="colorPrimaryDark">@color/primary_dark_color</item>
        </style>

        <!-- Estilo para uma categoria de palavras. -->
        <style name="CategoryStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/list_item_height</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:padding">12dp</item>
            <item name="android:textColor">#2a314a</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textAppearance">?android:textAppearanceMedium</item>
        </style>

     <!-- Estilo para os Titulos das descrições de cada tela -->
     <style name="TitleStyle">
         <item name="android:paddingTop">25dp</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_width">match_parent</item>
         <item name="android:textStyle">bold</item>
     </style>

     <!-- Estilo a descrição de cada titulo -->
     <style name="DescriptionStyle">
         <item name="android:paddingTop">15dp</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_width">match_parent</item>
         <item name="android:textSize">14sp</item>
         <item name="android:padding">16dp</item>
         <item name="android:textColor">@android:color/darker_gray</item>
     </style>

    </resources>
